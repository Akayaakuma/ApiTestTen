<html>
    <head>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <style>
            .table thead tr th {
                background-color: #333;
                color: #fff;
            }
            .table tbody tr:nth-child(even) td,
            .table tbody tr:nth-child(even) th {
                background-color: #eee;
            }
        </style>
    </head>
    <body>
        <table class="table Stats">
            <thead>
                <tr>
                    <th scope="col">Stats</th>
                    <th scope="col">Value</th>
                </tr>
            </thead>
            <tbody>
                <% Stats.forEach(function (stat) { %>
                <tr>
                    <th scope="row"><%= stat.name %></th>
                    <td><%= stat.value %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>

        <table class="table engraving">
            <thead>
                <tr>
                    <th scope="col">Engraving</th>
                    <th scope="col">Level</th>
                    <th scope="col">Icon</th>
                </tr>
            </thead>
            <tbody>
                <% engraving.forEach(function (engrav) { %>
                <tr>
                    <th scope="row"><%= engrav.name %></th>
                    <td><%= engrav.lev %></td>
                    <td>
                        <img src="<%= engrav.image %>" alt="<%= engrav.name %>" width="20" height="20" />
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Icon</th>
                    <th scope="col">Level</th>
                    <th scope="col">Skill</th>
                    <th scope="col">Skill Rune</th>
                    <th scope="col">Gem1</th>
                    <th scope="col">Gem2</th>
                    <th scope="col">R Icon</th>
                    <th scope="col">Rune</th>
                    
                </tr>
            </thead>
            <tbody>
                <% skills.forEach(function (skill) { %>
                <tr>
                    <td>
                        <img src="<%= skill.skill.image %>" alt="<%= skill.skill.name %>" width="20" height="20" />
                    </td>
                    <td><%= skill.skill.level %></td>
                    <th scope="row"><%= skill.skill.name %></th>
                    <td><%= skill.rune.join(", ") %></td>
                    <% skill.gems.forEach(function (gem) { %>
                    <td>
                        <img src="<%= gem.image %>" alt="<%= gem.name %>" width="20" height="20" />
                    </td>
                    <% }); %>
                    <% for (let i=skill.gems.length; i<2; i++) { %>
                        <td>
                            <img src="https://via.placeholder.com/20x20" alt="No Gem" width="20" height="20">
                        </td>
                    <% } %>
                    <td>
                        <img src="<%= skill.rune.image %>" alt="<%= skill.rune.name %>" width="20" height="20" />
                    </td>
                    <td><%= skill.rune.name %></td>
                    
                </tr>
                <% }); %>
            </tbody>
        </table>



    </body>
</html>